<s:HGroup 
	xmlns:fx="http://ns.adobe.com/mxml/2009"
  	xmlns:s="library://ns.adobe.com/flex/spark"
  	xmlns:mx="library://ns.adobe.com/flex/mx"
	
	width="100%"
	paddingLeft="15"
	paddingTop="15"
	paddingRight="15"
	paddingBottom="15">
	
	<fx:Script>
		<![CDATA[
			import actionScripts.plugin.settings.vo.BooleanSetting;
		
			
			[Bindable]
			public var setting:BooleanSetting;
			
			private function updateSetting():void
			{
				setting.value = uiCheckBox.selected;
			}
			
		]]>
	</fx:Script>
	
	<s:Label styleName="uiTextSettingsLabel"
		text="{setting.label}"
		mouseDown="{uiCheckBox.selected = !uiCheckBox.selected; updateSetting()}" />
		
	<mx:Spacer width="100%"/>
	
	<s:CheckBox id="uiCheckBox" 
		selected="{setting.value}"
		change="updateSetting();" />
	
</s:HGroup>